# Main System Orchestrator Configuration
# Copy this file to orchestrator_config.env and modify as needed

# Service URLs and Ports
MAIN_ORCHESTRATOR_PORT=5031
STRANDS_SDK_URL=http://localhost:5006
A2A_SERVICE_URL=http://localhost:5008
OLLAMA_BASE_URL=http://localhost:11434

# Model Configuration
ORCHESTRATOR_MODEL=granite4:micro
FALLBACK_MODELS=qwen3:1.7b,granite4:micro

# Multi-Agent Detection Keywords
# Comma-separated keywords that trigger multi-agent workflows
MULTI_AGENT_KEYWORDS=churn,campaign,slogan,prepaid,analysis,creative,technical,research

# Agent Selection Thresholds
MIN_AGENT_SCORE_THRESHOLD=0.1
MIN_MULTI_AGENT_SCORE_THRESHOLD=0.3
MIN_AGENTS_FOR_MULTI_AGENT=2

# Timeout Settings (seconds)
OLLAMA_TIMEOUT=30
A2A_TIMEOUT=120
AGENT_EXECUTION_TIMEOUT=60

# Orchestrator Exclusion
EXCLUDE_ORCHESTRATOR_FROM_SELECTION=true
ORCHESTRATOR_ID=main-system-orchestrator

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Workflow Configuration
DEFAULT_WORKFLOW_PATTERN=single_agent
DEFAULT_COORDINATION_STRATEGY=sequential
DEFAULT_COMPLEXITY_LEVEL=moderate

# Output Configuration
ENABLE_OUTPUT_CLEANING=true
ENABLE_REFLECTION=true
ENABLE_SYNTHESIS=true

# Capability Dependencies Configuration
# Format: capability1:dependency1,dependency2;capability2:dependency3
# Empty dependencies (no dependencies) are represented by capability:
CAPABILITY_DEPENDENCIES=churn_analysis:;campaign_design:churn_analysis;creative_writing:churn_analysis;creative:churn_analysis;poetry:churn_analysis;marketing_copy:churn_analysis;slogan_creation:churn_analysis;data_analysis:;technical_writing:
